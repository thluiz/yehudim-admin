<h1>Listing episodes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rabbi</th>
      <th>Identifier</th>
      <th>Tvshow</th>
      <th>Publication</th>
      <th>Order</th>
      <th>Spotlight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.title %></td>
        <td><%= episode.rabbi %></td>
        <td><%= episode.identifier %></td>
        <td><%= episode.tvshow_id %></td>
        <td><%= episode.publication %></td>
        <td><%= episode.order %></td>
        <td><%= episode.spotlight %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

